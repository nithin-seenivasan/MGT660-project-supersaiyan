{{template "layout" .}}

{{define "title"}}
	My eventbrite clone
{{end}}

{{define "content"}}
<header>
    <img id="logo" alt="logo" src="https://w7.pngwing.com/pngs/507/837/png-transparent-goku-dragon-ball-super-saiya-saiyan-iphone-6s-plus-beige-color.png">
</header>
<h1 class="title">Class project starter</h1>
<p>
	Hi, today is {{.Today.Format "Jan 02, 2006"}}
</p>
<p>
	<a href="/events/new">Create</a> a new event.
</p>
<ul>
	{{range .Events}}
		<li>
			<a href="/events/{{.ID}}">{{.Title}}</a>
			at
			<time>
				{{.Date.Format "2006-01-02T15:04:05"}}
			</time>
		</li>
	{{end}}
</ul>
{{end}}
