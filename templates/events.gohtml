{{template "layout" .}}

{{define "title"}}
	{{.Event.Title}}
{{end}}

{{define "content"}}
<h1 class="title">{{.Event.Title}}</h1>
<p>
	{{.Event.Location}}
</p>
<p>
	<a href="/events/{{.Event.ID}}/donate">
		Want to support?
	</a>
</p>
<p>
<time>
	{{.Event.Date}}
</time>
</p>
<p>
<ul>
	{{range .Rsvp_data}}
		<li>{{.}}</li>
	{{end}}
</ul>
</p>
<p>
<img src="{{.Event.Image}}" alt="event image">
</p>
<p>RSVP form:</p>
<p>
	<form action="/events/rsvp/{{.Event.ID}}" method="PUT">
		<input type="text" name="email">
		<input type="submit">
	</form>
</p>
{{end}}