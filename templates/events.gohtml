{{template "layout" .}}

{{define "title"}}
	{{.Event.Title}}
{{end}}

{{define "content"}}
<h1 class="title">{{.Event.Title}}</h1>
<p>
	{{.Requested_Event.Location}}
</p>
<p>
	<a href="/events/{{.Event.ID}}/donate">
		Want to support?
	</a>
</p>
<p>
<time>
	{{.Event.Date}}
</time>
</p>
<p>
<ul>
	{{range .Rsvp_data}}
		<li>
			{{.}}
		</li>
	{{end}}
</ul>
	Here's the page where the events will populate
</p>
<p>
<img src="{{Event.Image}}" alt="event image">
</p>
<p>RSVP form:</p>
	<form method="POST">
		<input type="email" name="email">
		<input type="submit">
	</form>
{{end}}